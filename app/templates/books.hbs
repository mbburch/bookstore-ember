<ul>
  {{#each model as |book|}}
  <a href="#" {{action 'openCheckoutModal' book}}>
    <li>
      <strong>{{book.title}}</strong><br><br>
      <em>by</em>
      {{link-to book.author.name 'authors' book.author.id class="author" bubbles=false}}
    </li>
  </a>
  {{/each}}
</ul>
{{#if showAll}}
  <button {{action 'showAll'}}>Show All</button>
{{/if}}